{% extends 'base.html.twig' %}

{% block title%} Experices {% endblock %}

{% block body %}
<h1>Mes Experiences</h1>
  {% if experiences %}
    <table class="table table-striped" >
      <thead>
        <tr>
         <th>Date</th>
         <th>Titre</th>
         <th>Description</th>
         <th>update</th>
        <th>delete</th>
        </tr>
      </thead>
      <tbody>
        {%  for experience in experiences %}
          <tr>
            <td>{{ experience.date }}</td>
            <td>{{ experience.titre }}</td>
            <td>{{ experience.description }}</td>
            <td><a href="/experience/edit/{{ experience.id }}" class="btn btn-secondary" data-id="{{ experience.id }}">update</a></td>
            <td><a href="/experience/delete/{{ experience.id }}" class="btn btn-danger delete-article" data-id="{{ experience.id }}">delete</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Tableau vide</p>
  {% endif %}
<td><a href="/experience/new" class="btn btn-primary mt-3">new</a></td>
{% endblock %}