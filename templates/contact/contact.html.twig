{% extends 'base.html.twig' %}

{% block title%} Contact {% endblock %}

{% block body %}
<h1>Contact</h1>
  {% if contacts %}
    <table class="table table-striped" >
      <thead>
        <tr>
         <th>adresse</th>
         <th>telephone</th>
         <th>Email</th>
        </tr>
      </thead>
      <tbody>
        {%  for contact in contacts %}
          <tr>
            <td>{{ contact.adresse }}</td>
            <td>{{ contact.telephone }}</td>
            <td>{{ contact.mail }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Pas de contact</p>
  {% endif %}


<h2>Par reseau sociaux</h2>
<div>
<a href="https://www.facebook.com/profile.php?id=100016394229547" target="_blank" class="fa fa-facebook"></a>
<a href="https://www.twitter.com/home" class="fa fa-twitter" target="_blank"></a>
<a href="https://www.linkedin.com/in/amin-ouail-837218184/" class="fa fa-linkedin" target="_blank"></a>
</div>


{% endblock %}