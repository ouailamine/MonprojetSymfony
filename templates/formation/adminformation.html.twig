{% extends 'base.html.twig' %}

{% block title%} Formation  {% endblock %}

{% block body %}
<h1>Mes Formations</h1>
  {% if formations %}
    <table class="table table-striped" >
      <thead>
        <tr>
         <th>Date</th>
         <th>Titre</th>
        
        </tr>
      </thead>
      <tbody>
        {%  for formation in formations %}
          <tr>
            <td>{{ formation.date }}</td>
            <td>{{ formation.titre }}</td>
            <td><a href="/formation/edit/{{ formation.id }}" class="btn btn-secondary" data-id="{{ formation.id }}">update</a></td>
            <td><a href="/formation/delete/{{ formation.id }}" class="btn btn-danger delete-article" data-id="{{ formation.id }}">delete</a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <p>Tableau vide</p>
  {% endif %}
<td><a href="/formation/new" class="btn btn-primary mt-3">new</a></td>
{% endblock %}